require('./bootstrap');

Livewire.on('showModal', (id) => {
    $('#' + id).modal('show');
});

Livewire.on('hideModal', (id) => {
    $('#' + id).modal('hide');
});

$(window).scroll(function () {
    if ($(window).scrollTop() + window.innerHeight === $(document).height()) {
        Livewire.emit('loadMore');
    }
});
