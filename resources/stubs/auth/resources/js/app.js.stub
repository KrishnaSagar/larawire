require('./bootstrap');

Livewire.on('showModal', (id) => {
    $('#' + id).modal('show');
});

Livewire.on('hideModal', (id) => {
    $('#' + id).modal('hide');
});

window.onscroll = function () {
    if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
        Livewire.emit('loadMore');
    }
};
